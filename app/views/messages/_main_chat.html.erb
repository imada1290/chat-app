<div class="main_chat_header">
  <div class="chat_name">
    <div class="chat_name_text">
      <%= @room.name %>
    </div>
  </div>
  <div class="destroy_chat">
    <%= link_to "チャットを終了する", room_path(@room), data: {turbo_method: :delete}, class: "destroy_chat_text" %>
  </div>
</div>

<div class="messages">
  <%= render partial: 'message', collection: @messages %>
</div>

<%= form_with model: [@room, @message], html: {class: "form"}, local: true do |f|%>
  <div class="form_input">
    <%= f.text_field :content, class: 'form_input_btn', placeholder: 'type a message' %>

    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form_submit' %>
<% end %>